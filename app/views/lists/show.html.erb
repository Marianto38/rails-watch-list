<div class="container col-12">
  <hr>
  <hr>
  <hr>
  <div class="container col-12">
    <div class="container col-12">
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @list.image %>">
          <h1><%= @list.name.capitalize %></h1>
          <%= link_to "Add new bookmark", new_list_bookmark_path(@list), class: "btn-flat"  %>
    </div>
  </div>
<hr>
<div class="container-new-list col-12">
  <h1>Tickets cards</h1>
  <% @list.bookmarks.each do |bookmark| %>
    <ul>
      <li class="booking-card" style="background-image: url(<%= bookmark.movie.poster_url %>)">
        <div class="book-container">
          <div class="content">
            <h1><%= bookmark.movie.title %></h1>
          </div>
        </div>
        <div class="informations-container">
          <h2 class="title"><%= bookmark.movie.title %></h2>
          <p><%= bookmark.movie.overview %></p>
          <p><% bookmark.movie.rating.to_i.times do%><i class="fa-solid fa-star"></i><% end %></p>
          <p><%= bookmark.movie.rating %></p>
            <div class="more-information">
              <div class="info-and-date-container">
                <div class="box info">
                  <p class="disclaimer"><%= bookmark.comment %></p>
                </div>
              </div>
            <div>
            <div>
              <%= link_to "Delete bookmark", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:'btn-flat'%>
            </div>
          </div>
        </div>
      </li>
    <% end %>
    </ul>
</div>
