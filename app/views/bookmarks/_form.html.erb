<div class="container justify-content-center">
  <div class="row card-list col-sm-10 col-lg-8  justify-content-center">
    <div class="row back-cards col-sm-10 col-lg-8 ">
      <h1> New Bookmark </h1>
        <%= simple_form_for [@list, @bookmark] do |f| %>
          <%= f.input :comment %>
          <%= f.association :movie, prompt: "Choose a movie" %>
          <%= f.submit %>
        <% end %>
    </div>
  </div>
</div>
